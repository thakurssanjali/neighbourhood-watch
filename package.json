{
  "name": "neighbourhood-watch",
  "version": "1.0.0",
  "description": "A community-based incident reporting and neighborhood watch application",
  "main": "api/index.js",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "cd server && npm start",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node api/index.js",
    "install-deps": "npm install && cd server && npm install && cd ../client && npm install && cd ..",
    "vercel-build": "cd client && npm install && npm run build"
  },
  "keywords": [
    "neighborhood",
    "watch",
    "incident",
    "reporting",
    "community"
  ],
  "author": "Sanjali Thakur",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongodb": "^7.0.0",
    "mongoose": "^9.0.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
